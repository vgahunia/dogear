<%= render 'layouts/header' %>
<h1>Users#show</h1>
<p><%= @user.first_name %>, <%= @user.last_name %>, <%= @user.email %></p>
<%= link_to "Edit your information", edit_user_path %>

<% if @user.books.any? %>
	<ol>
		<% @user.books.each do |book| %>
			<li><%= book.title %>(<% book.year %>), <%= book.author %></li>
		<% end %>
	</ol>
<% end %>

