<%= render 'layouts/header' %>

<div class="row">
<div class="col-md-8 col-md-offset-2">
    <div class="row" id="sign_in">
    <div class="col-lg-offset-2 col-lg-8" id="signin1">
      <h2>Update your Account Information</h2>
        <% if current_user?(@user) %>
        <p>If you truly must... </p> 
        <%= link_to image_tag("delete.png", class: "vel-button", 
            :onmouseover => "this.src='/assets/delete_hover1.png'", 
            :onmouseout => "this.src='/assets/delete.png'"), @user, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
    </div>
    </div>
        <div class="row">
        <div class="col-lg-12" id="signin2">
          
          <%= form_for(@user) do |f| %>
            <div class="row">
            <div class="col-lg-12">
                <%= render 'shared/error_messages' %>
            </div>
            </div>

            <div class="row">
            <div class="col-lg-6" id="essentials">
                <h3>The Essentials</h3>
                <%= f.label :username %>
                <%= f.text_field :username, class: 'form-control' %>

                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: 'form-control' %>

                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: 'form-control' %>

                <%= f.label :city %>
                <%= f.text_field :city, class: 'form-control' %>

                <%= f.label :state %><br>
                <%= f.select :state, us_states %><br>

                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>

                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>

                <%= f.label :password_confirmation, "Confirmation" %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            <div class="col-lg-6 fun_stuff">
                <h3>The Fun Stuff</h3>
                <%= f.label :fav_author, "Favorite Author" %>
                <%= f.text_field :fav_author, class: 'form-control' %><br>
                <div class="field">
                 
                  <fieldset class="col-lg-offset-1 col-lg-11" id="group">
                    <legend>Pick your favorite Genres</legend>
                  <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name do |b| %>
                    <div class="collection-check-box">
                      <%= b.check_box %>
                      <%= b.label %>
                    </div>
                  <% end %>
                  </fieldset>
                </div>
            </div>
            </div>
            <div class="row">
            <div class="col-lg-offset-4 col-lg-4">
                <div id="signin_button">
                  <%= image_submit_tag("paw.png", class: "vel-button",
                    :onmouseover => "this.src='/assets/paw_hover.png'", 
                    :onmouseout => "this.src='/assets/paw.png'")  %>
                </div>
            </div>
            </div>
          <% end %>
          
        </div>
    </div>
  </div>

</div>
</div>


