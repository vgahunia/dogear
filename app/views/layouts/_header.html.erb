
<div class="row">
<div class="col-lg-12" id="logo">
	<% if logged_in? %>
		<p>Hi, <%= @current_user.first_name %></p>
	<% end %>
	<h1><%= link_to "DogEar", root_path %></h1>

	<h4>(the discerning booklover's semi-organized organizational resource)... woof</h4>
	<nav id="header_menu">
		<ul>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Look up Books", books_new_path %></li>
			<li><%= link_to "Look up Bookstores", bookstores_map_path, remote: true %></li>
			<% if logged_in? %>
				<li><%= link_to "My Profile", current_user %></li>
				<li><%= link_to "Users", users_path %></li>
				<li><%= link_to "Log Out", logout_path %></li>
			<% else %>
				<li><%= link_to "Log in", login_path %></li>
				<li><%= link_to "Start an Account", signup_path %></li>
			<% end %>
		</ul>
	</nav>
</div>
</div>
