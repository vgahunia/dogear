<%= render 'layouts/header' %>
<% if @book %>
	<h1>Search Matches for <%= @book.upcase %></h1>
<% else %>
	<h1>Search for a book</h1>
<% end %>
	
<div class="list">

		<% if !@books.empty? %>
			<ol>
			<% @books.results.work.each do |book| %>
				<li>
					<p>
						<b><%= book.best_book.title %></b>
						(<%= book.original_publication_year %>), 
						<%= book.best_book.author.name %>,
						<%= book.best_book.description %>
						<%= image_tag book.best_book.image_url  %>
					</p>
					<%= book %>
					<%= link_to "Add to Favorites" %>
				</li>
			<% end %>
			</ol>
				<hr>
		<% else %>
			<ul>
				<li>Sorry, no listings found for your selection.</li>
			</ul>
		<% end %>

</div>